{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and Run in New CMD Window",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "gcc",
        "\"${file}\"",
        "-o",
        "\"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
        "&&",
        "start",
        "cmd",
        "/k",
        "\"${fileDirname}\\${fileBasenameNoExtension}.exe\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\MinGW\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compiler: C:\\MinGW\\bin\\g++.exe"
    }
  ]
}
