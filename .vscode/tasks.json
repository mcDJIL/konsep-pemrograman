{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run in New CMD Window",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "gcc",
                "\"${file}\"",
                "-o",
                "\"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
                "&&",
                "start",
                "cmd",
                "/k",
                "\"${fileDirname}\\${fileBasenameNoExtension}.exe\""
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
    ]
}